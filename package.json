{
  "name": "universal-asset-negotiation",
  "version": "1.0.0",
  "description": "A generic multi-agent system for automated asset trading, verification, and settlement",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "agents:asset-broker": "npx tsx agents/asset-broker-agent/src/index.ts",
    "agents:travel-agent": "npx tsx agents/travel-agent/src/index.ts",
    "agents:hotel-agent": "npx tsx agents/hotel-agent/src/index.ts",
    "agents:payment-agent": "npx tsx agents/payment-agent/src/index.ts",
    "agents:flight-agent": "npx tsx agents/flight-agent/src/index.ts",
    "agents:all": "concurrently \"npm run agents:asset-broker\" \"npm run agents:travel-agent\" \"npm run agents:hotel-agent\" \"npm run agents:payment-agent\" \"npm run agents:flight-agent\"",
    "ui:dev": "cd web-ui && npm run dev",
    "ui:build": "cd web-ui && npm run build",
    "ui:start": "cd web-ui && npm run start",
    "demo:negotiation": "npx tsx demo/negotiation-demo.ts",
    "demo:travel": "npx tsx demo/travel-demo.ts",
    "setup": "npm install && cd web-ui && npm install && cd ../agents/asset-broker-agent && npm install"
  },
  "keywords": [
    "a2a",
    "agents",
    "negotiation",
    "assets",
    "blockchain",
    "multi-agent"
  ],
  "author": "Universal Asset Negotiation Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.13.14",
    "concurrently": "^8.2.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@a2a-js/sdk": "^0.3.3",
    "@hashgraph/sdk": "^2.75.0",
    "@langchain/core": "^1.0.1",
    "@langchain/groq": "^1.0.0",
    "@langchain/openai": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "hedera-agent-kit": "^3.4.0",
    "langchain": "^1.0.1",
    "uuid": "^11.0.3"
  }
}
