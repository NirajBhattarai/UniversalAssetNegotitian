{
  "name": "universal-asset-negotiation",
  "version": "1.0.0",
  "description": "A generic multi-agent system for automated asset trading, verification, and settlement",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "agents:payment-agent": "npx tsx agents/payment-agent/src/index.ts",
    "agents:carbon-credit-negotiation": "npx tsx agents/carbon-credit-negotiation-agent/src/index.ts",
    "agents:all": "concurrently \"npm run agents:payment-agent\" \"npm run agents:carbon-credit-negotiation\"",
    "ui:dev": "cd web-ui && npm run dev",
    "ui:build": "cd web-ui && npm run build",
    "ui:start": "cd web-ui && npm run start",
    "demo:multi-agent": "npx tsx demo/multi-agent-demo.ts",
    "demo:carbon-credit": "npx tsx demo/carbon-credit-demo.ts",
    "demo:carbon-credit-payment": "npx tsx demo/carbon-credit-payment-demo.ts",
    "setup": "npm install && cd web-ui && npm install && cd ../agents/payment-agent && npm install && cd ../carbon-credit-negotiation-agent && npm install"
  },
  "keywords": [
    "a2a",
    "agents",
    "negotiation",
    "assets",
    "blockchain",
    "multi-agent"
  ],
  "author": "Universal Asset Negotiation Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.13.14",
    "concurrently": "^8.2.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@a2a-js/sdk": "^0.3.3",
    "@hashgraph/sdk": "^2.75.0",
    "@langchain/core": "^1.0.1",
    "@langchain/groq": "^1.0.0",
    "@langchain/openai": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "hedera-agent-kit": "^3.4.0",
    "langchain": "^1.0.1",
    "node-fetch": "^3.3.2",
    "uuid": "^11.0.3"
  }
}
